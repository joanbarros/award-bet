<%= form_for(@category, remote: true, :html=> {:role => "form"}) do |f| %>
<div id="error_explanation" style="font-size:0.8em;">
</div>

<label>
  Name
  <%= f.text_field :name  %>
</label>
<label>
  Description
  <%= f.text_field :description %>
</label>
<%= f.submit @category.new_record? ? "Create Category" : "Update Category", :class => "button large" %>

<% end %>
