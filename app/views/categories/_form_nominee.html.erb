<%= form_for(@nominee, :url => url_for(:controller => 'categories',
           :action =>  @nominee.new_record? ? "create_nominee" : "update_nominee" ),
           :method => @nominee.new_record? ? "post" : "put",
           remote: true,  :html=> {:role => "form"}) do |f| %>

<div id="error_explanation" style="font-size:0.8em;">
</div>

<label>
  Name
  <%= f.text_field :name  %>
</label>

<label>
  Description
  <%= f.text_field :description %>
</label>

<label>
  Image URL
  <%= f.text_field :image_url %>
</label>

<label>
  Winner?
    <%= f.check_box :winner  %>
</label>


<div class="row">
  <div class="small-offset-7 small-5 columns">
<%= f.submit @nominee.new_record? ? "Create Nominee" : "Update Nominee", :class => "button large success" %>
</div>
</div>
<% end %>
