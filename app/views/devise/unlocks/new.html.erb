<div class="row" style="margin-top:2em;height:80vh;">

  <div
    class="large-3 large-centered columns"
    style=" position: absolute;
    left: 50%; top: 50%;  transform: translate(-50%, -50%);  -webkit-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%); -ms-transform: translate(-50%, -50%);">
    <h4>Resend unlock instructions</h4>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Resend unlock instructions", :class=> "button" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
